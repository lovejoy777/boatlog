<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

        <ImageView
            android:id="@+id/imageViewAccu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gps_fixed"
            android:tint="@color/night_text"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/textViewGetTimeAbbr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nil"
            android:textSize="8sp"
            android:textColor="?attr/colorLightTextPrimary"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/textViewGetTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nil"
            android:textSize="12sp"
            android:textColor="?attr/colorLightTextPrimary"
            android:layout_gravity="end"/>

    </android.support.v7.widget.Toolbar>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MLL1"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:layout_below="@+id/toolbar"
    android:baselineAligned="false">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewPos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Location"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textStyle="italic"
                android:typeface="serif"
                android:textColor="?attr/colorTextPrimary"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/textViewLat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No GPS Lat"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="?attr/colorTextPrimary"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/textViewLon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No GPS Long"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="?attr/colorTextPrimary"
                android:layout_below="@id/textViewLat"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:id="@+id/LLG3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?attr/colorDivider"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true">
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLG1"
        android:orientation="horizontal"
        android:layout_width="2dp"
        android:layout_height="80dp"
        android:background="?attr/colorDivider">
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewSped"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speed Over Ground"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textStyle="italic"
                android:typeface="serif"
                android:textColor="?attr/colorTextPrimary"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/textViewSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No GPS"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="?attr/colorTextPrimary"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:id="@+id/LLG4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?attr/colorDivider"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true">
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/MLL2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_below="@+id/MLL1"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="0.9">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Track Over Ground"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:typeface="serif"
                    android:textColor="?attr/colorTextPrimary"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/textViewHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Heading"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:textColor="?attr/colorTextPrimary"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <LinearLayout
                    android:id="@+id/LLG5"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="?attr/colorDivider"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true">
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LLG2"
            android:orientation="horizontal"
            android:layout_width="2dp"
            android:layout_height="80dp"
            android:background="?attr/colorDivider">
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="0.9">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewComp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Compass"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:typeface="serif"
                    android:textColor="?attr/colorTextPrimary"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/textViewCompass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Compass"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:textColor="?attr/colorTextPrimary"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <LinearLayout
                    android:id="@+id/LLG6"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="?attr/colorDivider"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true">
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/MLL3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_below="@+id/MLL2"
            android:baselineAligned="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context="com.lovejoy777.boatlog.MainActivityLog" />

                <ImageView
                    android:id="@+id/zoomBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="12dp"
                    android:src="@drawable/ic_zoom_in_white_36dp"/>

                <SeekBar
                    android:id="@+id/zoomSeekbar"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_toStartOf="@id/zoomBtn"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="18dp"
                    android:max="20"/>

                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_log" />

</android.support.v4.widget.DrawerLayout>