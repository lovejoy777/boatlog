<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MRL1"
    android:background="?attr/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_height="160dp"
        android:layout_width="match_parent"
        android:minHeight="?android:attr/actionBarSize"
        android:background="?android:attr/colorPrimary"
        android:gravity="bottom"
        tools:context="com.lovejoy777.boatlog.Tutorial">

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imVie_AppLogo"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:elevation="5dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tv_AppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BoatLog"
        android:textColor="?attr/colorLightTextPrimary"
        android:layout_below="@+id/imVie_AppLogo"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:layout_marginTop="8dp"
        android:elevation="5dp" />

    <TextView
        android:id="@+id/tv_Version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/version"
        android:layout_below="@+id/tv_AppName"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:elevation="5dp"
        android:textColor="?attr/colorLightTextPrimary" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_height="match_parent"
        android:layout_width="fill_parent"
        android:background="?attr/colorBackground"
        android:layout_below="@+id/toolbar4">

        <RelativeLayout
            android:id="@+id/RL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorBackground"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingTop="0dp"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="400dp"
                android:id="@+id/screen_shot"
                android:src="@drawable/screenshot_youtube"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:elevation="5dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/cast_expanded_controller_ad_image_description" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>