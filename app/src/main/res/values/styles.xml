<resources>

    <style name="DarkTheme">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textColorPrimary">@color/accent</item>
        <item name="android:textColorSecondary">@color/accent</item>
    </style>

    <!-- Toolbars -->
    <style name="Base.Theme.Test" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_menu</item>
    </style>

    <!-- Theme for menu Activity (transparent Statusbar)-->
    <style name="Base.Theme.Toolbar.TransparentStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- Main theme -->
    <style name="Base.Theme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="mcab_contentinset_start">60dp</item>
    </style>

    <!-- Navigation Drawer Text Sytle -->
    <style name="NavigationViewTheme" parent="AppTheme">
        <item name="textAppearanceListItem">@style/TextAppearance.AppCompat.Body2</item>
    </style>
    ThemeOverlay_Material_Dialog_Alert


    <!-- Normal app Theme -->
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
    </style>

    <!-- About -->
    <!-- MaterialLight: Theme.Material.Light.DarkActionBar | MaterialDark: Theme.Material -->
    <style name="Toolbar2" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:colorPrimary">@color/primary</item>
    <item name="android:colorPrimaryDark">@color/primary_dark</item>
    <item name="android:colorAccent">@color/accent</item>
    <item name="android:textColorPrimary">@color/textColorPrimary</item>
    <item name="android:textColorSecondary">@color/text_color_secondary</item>
    <item name="android:textColor">@color/textColorPrimary</item>
    <item name="android:windowBackground">@color/background</item>
    <item name="android:divider">@null</item>
    <item name="android:listDivider">@null</item>

    </style>

    <style name="Toolbar_Popup" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <!-- Main Activity - Overflow Menu -->
    <style name="popupNew" parent="Theme.AppCompat.Light"/>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:background">@color/grey800</item>

    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="progressSpinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">

        <item name="android:textColor">@color/night_text</item>
    </style>

    <style name="progressSpinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

        <item name="android:padding">2sp</item>
        <item name="android:textColor">@color/night_text</item>
    </style>

    <style name="StyledDialog" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/grey800</item>

    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:fullDark">@color/cardview_dark_background</item>
    </style>

</resources>
