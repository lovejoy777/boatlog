<resources>

    <!-- Normal app Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@color/colorDivider</item>
        <item name="colorDivider">@color/colorDivider</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/night_text</item>
        <item name="colorBackground">@color/white</item>
        <item name="colorTintedBackground">@color/colorTintedBackground</item>
        <item name="colorTextPrimary">@color/colorTextPrimary</item>
        <item name="colorTextSecondary">@color/colorTextSecondary</item>
        <item name="colorLightTextPrimary">@color/colorLightTextPrimary</item>
        <item name="colorLightTextSecondary">@color/colorLightTextSecondary</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="colorCardBackground">@color/colorCardBackground</item>
        <item name="colorSplashBackground">@color/colorSplashBackground</item>
        <item name="textColorAlertDialogListItem">@color/colorTextPrimary</item>
        <item name="android:textColorAlertDialogListItem">@color/colorTextPrimary</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>
    <!-- Dialog App Theme -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/night_text</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:background">@color/background</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextPrimary</item>
        <item name="textColorAlertDialogListItem">@color/colorTextPrimary</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <!-- Dark theme -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/darkTheme_colorPrimary</item>
        <item name="colorPrimaryDark">@color/darkTheme_colorPrimaryDark</item>
        <item name="colorAccent">@color/darkTheme_colorAccent</item>
        <item name="android:listDivider">@color/darkTheme_colorDivider</item>
        <item name="colorDivider">@color/darkTheme_colorAccent</item>
        <item name="colorBackground">@color/darkTheme_colorBackground</item>
        <item name="colorTintedBackground">@color/darkTheme_colorTintedBackground</item>
        <item name="colorTextPrimary">@color/darkTheme_colorTextPrimary</item>
        <item name="colorTextSecondary">@color/darkTheme_colorTextSecondary</item>
        <item name="colorLightTextPrimary">@color/darkTheme_colorLightTextPrimary</item>
        <item name="colorLightTextSecondary">@color/darkTheme_colorTextPrimary</item>
        <item name="android:textColorPrimary">@color/darkTheme_colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/darkTheme_colorTextSecondary</item>
        <item name="android:textColor">@color/accent</item>
        <item name="colorCardBackground">@color/darkTheme_colorCardBackground</item>
        <item name="colorSplashBackground">@color/darkTheme_colorSplashBackground</item>
        <item name="android:textColorAlertDialogListItem">@color/night_text</item>
        <item name="textColorAlertDialogListItem">@color/night_text</item>
    </style>
    <!-- Dialog Dark Theme -->
    <style name="darkTheme_AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/night_text</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle.Dark</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle.Dark</item>
        <item name="android:background">@color/card_background</item>
        <item name="android:textColor">@color/night_text</item>
        <item name="textColorAlertDialogListItem">@color/night_text</item>
        <item name="android:textColorPrimary">@color/night_text</item>
        <item name="android:textColorSecondary">@color/night_text</item>
    </style>
    <style name="NegativeButtonStyle.Dark" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/accent</item>
    </style>
    <style name="PositiveButtonStyle.Dark" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/accent</item>
    </style>

    <!-- For themes -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Dark" parent="AppTheme.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.PopupOverlay.Dark" parent="ThemeOverlay.AppCompat" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- old (needs sorting -->

    <!-- Toolbars -->
    <style name="Base.Theme.Test" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/night_text</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_menu</item>
    </style>

    <!-- Theme for menu Activity (transparent Statusbar)-->
    <style name="Base.Theme.Toolbar.TransparentStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/night_text</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- Main theme -->
    <style name="Base.Theme.Toolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/night_text</item>
        <item name="mcab_contentinset_start">60dp</item>
    </style>

    <!-- Navigation Drawer Text Sytle -->
    <style name="NavigationViewTheme" parent="AppTheme">
        <item name="textAppearanceListItem">@style/TextAppearance.AppCompat.Body2</item>
    </style>

    <!-- About -->
    <!-- MaterialLight: Theme.Material.Light.DarkActionBar | MaterialDark: Theme.Material -->
    <style name="Toolbar2" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:colorPrimary">@color/primary</item>
    <item name="android:colorPrimaryDark">@color/primary_dark</item>
    <item name="android:textColorPrimary">@color/primary_dark</item>
        <item name="android:colorAccent">@color/night_text</item>
    <item name="android:textColorSecondary">@color/text_color_secondary</item>
    <item name="android:textColor">@color/primary_dark</item>
    <item name="android:windowBackground">@color/background</item>
    <item name="android:divider">@null</item>
    <item name="android:listDivider">@null</item>

    </style>

    <style name="Toolbar_Popup" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <!-- Main Activity - Overflow Menu -->
    <style name="popupNew" parent="Theme.AppCompat.Light"/>

    <style name="progressSpinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">

        <item name="android:textColor">@color/night_text</item>
    </style>

    <style name="progressSpinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/night_text</item>
    </style>

    <style name="StyledDialog" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/card_background</item>

    </style>

    <style name="AppTheme.NoStatusBar" parent="AppTheme.NoActionBar">

    </style>


</resources>
